@model IEnumerable<EmployeeRegistrationApp.Models.EmployeeDetails>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (TempData["SuccessMessage"] != null)
{
    <center>
        <p class="alert alert-success col-md-3" id="successMessage">@TempData["SuccessMessage"]</p>
    </center>
}
@if (TempData["Failure"] != null)
{
    <center>
        <p class="alert alert-danger col-md-3" id="failureMessage">@TempData["Failure"]</p>
    </center>
}


<div class="card">
    <div class="card-header">
        <center><h2>Employee Lists</h2></center>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="table-responsive">

            @*<p>
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                </p>*@
            <table class="table table-bordered table-striped" id="datatable" style="font-size:0.8rem; white-space:nowrap">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.EmpID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Firstname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Lastname)
                        </th>
                        <th >
                            @Html.DisplayNameFor(model => model.Dob)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Contactno)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AddressLine1)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AddressLine2)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.City)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.State)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Pincode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Gender)
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmpID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Firstname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Lastname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Dob)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Contactno)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AddressLine1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AddressLine2)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.City)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.State)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Pincode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <th>
                                @Html.DisplayFor(modelItem => item.Gender)
                            </th>
                            <td>
                                <i class="fa fa-pencil-square-o"></i> @Html.ActionLink("Edit", "Edit", new { id = item.EmpID }) |
                                <i class="fa fa-trash"></i> @Html.ActionLink("Delete", "Delete", new { id = item.EmpID }, new { onclick = "return confirm('Are you sure you want to delete?');" })
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>
</div>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>

    $(function () {
        $("#datatable").DataTable({
            "responsive": true,
            "autoWidth": true
        });



    });


    $(document).ready(function () {
        $('#successMessage').fadeOut(10000); // 10 seconds x 1000 milisec = 10000 milisec
        $('#failureMessage').fadeOut(10000);
    });
</script>
